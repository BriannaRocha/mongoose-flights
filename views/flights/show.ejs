<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Title: </div>
		<div>
      <%= flight.title %> 
      <a href="/flights/<%= flight._id %>/edit">
        <button>Edit Flight</button>
      </a>
    </div>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs Date & Time: </div>
    <div><%= flight.departs %></div>
		<%# start entrees list %>
    <div>Meal Entrees:</div>
    <ul>
      <% flight.entrees.forEach(entreesMeal => { %>
        <li><%= entreesMeal.name %></li>
      <% }) %>
    </ul>
    <%# end entrees list %>
  </section>
	<%# add to entrees form below this comment %>
  <form id="add-meal-to-entrees" action="/flights/<%= flight._id %>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %>"><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add to Meals</button>
  </form>
  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-input">Seat:</label>
    <input name="seat" required pattern="[A-F][1-9]\d?" id="seat-input">
    <label for="price-input">Price:</label>
    <input name="price" type="number" min="0" id="price-input">
    <button type="submit">Add Ticket</button>
  </form>

	<% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Seat</th>
          <th>Price</th>
					<th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %> 
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>ðŸ›« No Tickets Yet ðŸŽ«</h3>
  <% } %>
</main>


<%- include('../partials/footer') %>